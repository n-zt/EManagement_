@model EManagement_Common.VModels.EmployeeLeaveTypeViewModel 

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<form class="form-horizontal" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="Name">Leave Type</label>

        <div class="col-sm-9">
            <input asp-for="Name" type="text" id="form-field-1" placeholder="Leave Type" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="DefaultDays">Default Days</label>

        <div class="col-sm-9">
            <input asp-for="DefaultDays" type="number" min="0" max="30" id="form-field-1" placeholder="Default Days" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="DefaultDays"></span>
        </div>
    </div>
    
    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            @*<button class="btn btn-info" type="button">
            <i class="ace-icon fa fa-check bigger-110"></i>
            Submit
            </button>*@
            <input type="submit" value="Create" class="btn btn-info col-xs-3" />
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}