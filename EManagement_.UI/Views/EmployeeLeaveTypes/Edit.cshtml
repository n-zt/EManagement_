@model EManagement_Common.VModels.EmployeeLeaveTypeViewModel

@{
    ViewData["Title"] = "Employee Leave Type Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<form class="form-horizontal" asp-action="Edit">
    @*@Html.HiddenFor(x=>Model.id) alttaki input ifadesiyle aynı anlamda*@
    <input type="hidden" asp-for="id"/>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="Name">Leave Type</label>

        <div class="col-sm-9">
            <input asp-for="Name" type="text" id="form-field-1" placeholder="Leave Type" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
           
            <input type="submit" value="Edit" class="btn btn-info col-xs-3" />
        </div>
    </div>
</form>

